<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">






   <ImageView
       android:id="@+id/image_view_1"
       android:src="@mipmap/ic_launcher_round"
       android:layout_marginTop="10dp"
       android:layout_width="200dp"
       android:scaleType="fitXY"
       android:layout_height="200dp"></ImageView>


    <TextView
        android:id="@+id/textview_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image_view_1"
        android:text="smartphone"></TextView>


    <TextView
        android:id="@+id/textview_33"
        android:layout_below="@id/textview_22"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_1"
        android:text="smartphone"></TextView>


    <TextView
        android:id="@+id/textview_34"
        android:layout_marginStart="5dp"
        android:layout_below="@id/textview_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image_view_1"
        android:text="smartphone"></TextView>


    <ImageView
        android:id="@+id/imageview_111"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/image_view_1"
        android:src="@drawable/ic_baseline_control_point_24"
        ></ImageView>


    <ImageView
        android:id="@+id/imageview_222"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/image_view_1"
        android:layout_toRightOf="@id/imageview_111"
        android:layout_marginLeft="300dp"
        android:src="@drawable/ic_baseline_content_cut_24"
        ></ImageView>






</RelativeLayout>





